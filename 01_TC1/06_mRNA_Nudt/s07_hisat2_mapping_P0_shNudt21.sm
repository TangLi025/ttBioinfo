SAMPLE=["P0_siNudt21_Ctrl","P0_siNudt21_dox","P2_siNudt21_Ctrl"]   

READ=["1","2"]

INDEX="/disk/user_09/reference/index/hisat2/mm39/mm39"

MAPPING_THREADS = 30

# 根据样本命名修改sample、rep等
rule all:
  input:
    expand("05_hisat2_mapping_P0_shNudt21/01_bam_raw/{sample}.bam.bai",sample=SAMPLE)

# 注意链特异性类型 
# --rna-strandness RF （R2为forward，有义链）
# 如果比对率不高，可以尝试 --very-sensitive
rule hisat2_mapping:
  input:
    "02_fastq_derRNA/00_derRNA_fastq/{sample}_1.derRNA.fq.gz",
    "02_fastq_derRNA/00_derRNA_fastq/{sample}_2.derRNA.fq.gz"
  output:
    bam="05_hisat2_mapping_P0_shNudt21/01_bam_raw/{sample}.bam",
    summary="info/05_hisat2_mapping_P0_shNudt21/01_bam_raw/{sample}.summary.txt"
  params:
    index=INDEX,
    outname="05_hisat2_mapping_P0_shNudt21/{sample}_%.fq.gz"
  log:
    "logs/05_hisat2_mapping_P0_shNudt21/01_bam_raw/{sample}.log"
  threads: MAPPING_THREADS
  shell:
    """
    /disk/user_09/anaconda3/envs/LinLong/bin/hisat2 -x {params.index} \
    --rna-strandness RF \
    --summary-file {output.summary} \
    -p {threads} -1 {input[0]} -2 {input[1]} \
    --un-conc {params.outname} \
    | /disk/user_09/anaconda3/envs/LinLong/bin/samtools view -@ {threads} -bS \
    | /disk/user_09/anaconda3/envs/LinLong/bin/samtools sort -@ {threads} -o {output.bam} \
    1> {log} 2>&1
    """

rule bam_index:
  input:
    "05_hisat2_mapping_P0_shNudt21/01_bam_raw/{sample}.bam"
  output:
    "05_hisat2_mapping_P0_shNudt21/01_bam_raw/{sample}.bam.bai"
  log:
    "logs/05_hisat2_mapping_P0_shNudt21/01_bam_raw_index/{sample}.log"
  threads: 2
  shell:
    "/disk/user_09/anaconda3/envs/LinLong/bin/samtools index -@ {threads} {input} 1> {log} 2>&1"
    
